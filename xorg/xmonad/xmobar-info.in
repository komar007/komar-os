#include <xmonad.rc>

Config {
    font = xstr(XMOBAR_FONT),
    bgColor = "black",
    fgColor = "#555753",
    iconRoot = ICON_ROOT,
    iconOffset = ICON_OFFSET,
    position = Static { xpos = POS, ypos = YPOS, width = WIDTH, height = HEIGHT },
    lowerOnStart = False,
    commands = [
        Run Cpu [
            "-L","3",
            "-H","50",
            "-t","<icon=cpu.xbm/><total>%",
            "--normal","#719a4b", "--high","#a53333"
        ] 10,
        Run Memory [
            "-t","<icon=mem.xbm/><usedratio>%",
            "--low", "#777777", "--normal", "#aaaaaa", "--high", "#a53333"
        ] 10,
        Run Swap [
            "-t", "<usedratio>%",
            "--low", "#777777", "--normal", "#aaaaaa", "--high", "#a53333"
        ] 10
#ifdef CONFIG_LAPTOP
        , Run Battery [
            "-t", "<icon=bat.xbm/><left>% <watts>W ",
            "-L", "25", "-H", "70",
            "--low", "#a53333", "--normal", "#aaaaaa", "--high", "#777777"
        ] 10
#endif
    ],
    sepChar = "X",
#ifdef CONFIG_LAPTOP
    template = "XmemoryX/XswapX XcpuX XbatteryX"
#else
    template = "XmemoryX/XswapX XcpuX"
#endif
}

-- vim:ft=haskell
